{
    "name": "ChromeGPT",
    "short_name": "ChromeGPT",
    "description": "Replaces website text content with GPT",
    "homepage_url": "https://github.com/joshgriffith/ChromeGPT",
    "version": "0.2.0",
    "version_name": "0.2.0",
    "manifest_version": 3,
    "default_locale": "en",
    "minimum_chrome_version": "88",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "commands": {
        "trigger-action": {
          "suggested_key": {
            "default": "Ctrl+9"
          },
          "description": "Trigger action"
        }
      },
    "permissions": ["activeTab", "scripting", "storage", "tabs", "contextMenus"],
    "icons": {
        "48": "assets/img/48x48.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "48": "assets/img/48x48.png"
        },
        "default_title": "ChromeGPT"
    }
}